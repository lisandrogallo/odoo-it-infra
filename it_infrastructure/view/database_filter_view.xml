    <field name="name">it_infrastructure.database_filter.tree</field>
    <field name="model">it_infrastructure.database_filter</field>
    <field name="arch" type="xml">
        <tree string="database_filter">
            <field name="name"/>
            <field name="rule"/>
        </tree>
    </field>
</record>

<record id="action_infrastructure_database_filter_database_filters" model="ir.actions.act_window">
    <field name="name">Database Filters</field>
    <field name="res_model">it_infrastructure.database_filter</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_infrastructure_database_filter_tree"/>
    <field name="search_view_id" ref="view_infrastructure_database_filter_filter"/>
    <field name="domain">[]</field>
</record>

<menuitem
    name="Database Filters"
    id="menu_database_filters"
    sequence="100"
    action="action_infrastructure_database_filter_database_filters"
    parent="menu_databases_conf"
    groups="group_manager"
    />

</data>
