<!-- SEARCH VIEW -->
<record id="view_infrastructure_database_filter_filter" model="ir.ui.view">
    <field name="name">it_infrastructure.database_filter.select</field>
    <field name="model">it_infrastructure.database_filter</field>
    <field name="arch" type="xml">
        <search string="database_filter" version="7.0">
            <group string="By Attribute">
                <field name="name" string="Name"/>
