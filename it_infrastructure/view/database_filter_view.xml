</record>

<!-- FORMVIEW -->
<record id="view_infrastructure_database_filter_form" model="ir.ui.view">
    <field name="name">it_infrastructure.database_filter.form</field>
    <field name="model">it_infrastructure.database_filter</field>
    <field name="arch" type="xml">
        <form string="database_filter" version="7.0">
            <header>
