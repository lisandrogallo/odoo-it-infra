<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="device_view_search"
        model="ir.ui.view">
        <field name="name">it_infra.device.view.search</field>
        <field name="model">it_infra.device</field>
        <field name="arch"
            type="xml">
            <search>
                <group>
                    <field name="name" />
                    <field name="office" />
                    <field name="state" />
                    <filter name="filter_state" string="Activo" domain="[('state', '=', 'active')]"/>
                </group>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="device_view_form"
        model="ir.ui.view">
        <field name="name">it_infra.device.view.form</field>
        <field name="model">it_infra.device</field>
        <field name="arch"
            type="xml">
            <form>
                <header>
                    <button name="action_draft"
                        type="object"
                        string="to Draft"
                        states="active,stored,decommissioned" />
                    <button name="action_active"
                        type="object"
                        string="to Active"
                        states="draft"
                        class="oe_highlight" />
                    <button name="action_stored"
                        type="object"
                        string="to Stored"
                        states="active"
                        class="oe_highlight" />
                    <button name="action_decommissioned"
                        type="object"
                        string="to Decommissioned"
                        states="stored"
                        class="oe_highlight" />
                    <field name="state"
                        widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name"
                                placeholder="Name..." />
                        </h1>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                    <group>
                        <group>
                            <field name="ip_address" />
                            <field name="stock_number" />
                            <field name="purchase_date" />
                            <field name="warranty" />
                        </group>
                        <group>
                            <field name="device_category_id"
                                domain="[('parent_id', '!=', False)]" />
                            <field name="office" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Supplies">
                            <field name="supply_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="device_view_tree"
        model="ir.ui.view">
        <field name="name">it_infra.device.view.tree</field>
        <field name="model">it_infra.device</field>
        <field name="arch"
            type="xml">
            <tree>
                <field name="name" />
                <field name="ip_address" />
                <field name="device_category_id"
                    invisible="True" />
                <field name="stock_number" />
                <field name="state" />
                <field name="supply_ids" />
                <field name="office" />
            </tree>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="device_printer_action_view_form"
        model="ir.actions.act_window">
        <field name="name">Printers</field>
        <field name="res_model">it_infra.device</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_state': True }</field>
        <field name="domain">[(u'device_category_id', u'ilike', u'Impresora')]</field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="device_scanner_action_view_form"
        model="ir.actions.act_window">
        <field name="name">Scanners</field>
        <field name="res_model">it_infra.device</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[(u'device_category_id', u'ilike', u'Esc\xe1ner')]</field>
    </record>

</odoo>
