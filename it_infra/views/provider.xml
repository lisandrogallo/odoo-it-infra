<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_it_infra_provider_tree"
            model="ir.ui.view">
        <field name="name">it_infra.provider.tree</field>
        <field name="model">it_infra.provider</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="ip_address" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_it_infra_provider_form"
            model="ir.ui.view">
        <field name="name">it_infra.provider.form</field>
        <field name="model">it_infra.provider</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="membership_number"/>
                        </group>
                        <group>
                            <field name="ip_address" />
                            <field name="netmask" />
                            <field name="gateway" />
                            <field name="dns_server_1" />
                            <field name="dns_server_2" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <br/>
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION  -->
    <record id="action_it_infra_providers"
            model="ir.actions.act_window">
        <field name="name">Providers</field>
        <field name="res_model">it_infra.provider</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>