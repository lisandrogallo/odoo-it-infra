<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="software_category_view_form"
        model="ir.ui.view">
        <field name="name">it_infra.software_category.view.form</field>
        <field name="model">it_infra.software_category</field>
        <field name="arch"
            type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="parent_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION  -->
    <record id="software_category_action_form"
        model="ir.actions.act_window">
        <field name="name">Software Categories</field>
        <field name="res_model">it_infra.software_category</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
