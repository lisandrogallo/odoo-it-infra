<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="view_infrastructure_software_category_form"
            model="ir.ui.view">
        <field name="name">it_infra.software_category.form</field>
        <field name="model">it_infra.software_category</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="parent_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- WINDOW ACTION  -->
    <record id="action_it_infra_software_categories"
            model="ir.actions.act_window">
        <field name="name">Software Categories</field>
        <field name="res_model">it_infra.software_category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>