<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="view_infrastructure_server_filter"
            model="ir.ui.view">
        <field name="name">it_infra.server.select</field>
        <field name="model">it_infra.server</field>
        <field name="arch"
               type="xml">
            <search>
                <group>
                    <field name="name" />
                    <field name="user_id" />
                    <field name="os_id" />
                </group>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_infrastructure_server_form"
            model="ir.ui.view">
        <field name="name">it_infra.server.form</field>
        <field name="model">it_infra.server</field>
        <field name="arch"
               type="xml">
            <form>
                <header>
                    <button name="action_draft"
                            type="object"
                            string="to Draft"
                            states="active,stored,decommissioned" />
                    <button name="action_active"
                            type="object"
                            string="to Active"
                            states="draft"
                            class="oe_highlight" />
                    <button name="action_stored"
                            type="object"
                            string="to Stored"
                            states="active"
                            class="oe_highlight" />
                    <button name="action_decommissioned"
                            type="object"
                            string="to Decommissioned"
                            states="stored"
                            class="oe_highlight" />
                    <field name="state"
                           widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </group>
                    <group>
                        <field name="category_ids"
                               widget="many2many_tags" />
                        <field name="description" />
                    </group>
                    <group>
                        <group>
                            <field name="os_id" />
                            <field name="hostname" />
                            <field name="ip_address" />
                            <field name="netmask" />
                            <field name="virtual_machine" string="VM" />
                            <field name="open_ports" />
                        </group>
                        <group>
                            <field name="username" />
                            <label for="password" />
                            <div>
                                <field name="password"
                                       password="True"
                                       class="oe_inline" />
                                <button name="show_passwd"
                                        string="View Password"
                                        icon="fa-eye"
                                        type="object"
                                        class="oe_link oe_inline" />
                            </div>
                        </group>
                        <group>
                            <field name="stock_number" />
                            <field name="purchase_date" />
                            <field name="warranty" />
                            <field name="source_doc_number" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Hardware">
                            <field name="hardware_data" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers" />
                    <field name="message_ids"
                           widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_infrastructure_server_tree"
            model="ir.ui.view">
        <field name="name">it_infra.server.tree</field>
        <field name="model">it_infra.server</field>
        <field name="arch"
               type="xml">
            <tree decoration-bf="message_unread==True"
                  decoration-muted="state=='cancelled'"
                  decoration-info="state=='draft'">
                <field name="name" />
                <field name="category_ids"
                       widget="many2many_tags" />
                <field name="virtual_machine" string="VM" />
                <field name="os_id"
                       widget="many2one_unclickable" />
                <field name="ip_address" />
                <field name="user_id"
                       widget="many2one_unclickable" />
                <field name="state"
                       invisible="True" />
                <field name="message_unread"
                       invisible="True" />
            </tree>
        </field>
    </record>

    <!-- WINDOW ACTION  -->
    <record id="action_it_infra_server_servers"
            model="ir.actions.act_window">
        <field name="name">Servers</field>
        <field name="res_model">it_infra.server</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id"
               ref="view_infrastructure_server_tree" />
        <field name="search_view_id"
               ref="view_infrastructure_server_filter" />
    </record>

</odoo>