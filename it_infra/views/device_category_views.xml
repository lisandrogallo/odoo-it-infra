<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="device_category_view_tree"
            model="ir.ui.view">
        <field name="name">it_infra.device_category.view.tree</field>
        <field name="model">it_infra.device_category</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="parent_id" />
            </tree>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="device_category_action_form"
            model="ir.actions.act_window">
        <field name="name">Device Categories</field>
        <field name="res_model">it_infra.device_category</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>