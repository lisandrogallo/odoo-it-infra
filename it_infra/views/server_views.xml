<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="server_view_search"
        model="ir.ui.view">
        <field name="name">it_infra.server.view.search</field>
        <field name="model">it_infra.server</field>
        <field name="arch"
            type="xml">
            <search>
                <group>
                    <field name="name" />
                    <field name="user_id" />
                    <field name="os_id" />
                    <field name="location_id" />
                </group>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="server_view_form"
        model="ir.ui.view">
        <field name="name">it_infra.server.view.form</field>
        <field name="model">it_infra.server</field>
        <field name="arch"
            type="xml">
            <form>
                <header>
                    <button name="action_draft"
                        type="object"
                        string="to Draft"
                        states="active,stored,decommissioned" />
                    <button name="action_active"
                        type="object"
                        string="to Active"
                        states="draft"
                        class="oe_highlight" />
                    <button name="action_stored"
                        type="object"
                        string="to Stored"
                        states="active"
                        class="oe_highlight" />
                    <button name="action_decommissioned"
                        type="object"
                        string="to Decommissioned"
                        states="stored"
                        class="oe_highlight" />
                    <field name="state"
                        widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name"
                                placeholder="Name..." />
                        </h1>
                    </group>
                    <group>
                        <field name="hosted_in_id"
                            attrs="{'invisible':[('server_type', 'not in', ['vm', 'docker'])]}" />
                        <field name="webadmin"
                            widget="url" />
                        <field name="category_ids"
                            widget="many2many_tags" />
                        <field name="description" />
                    </group>
                    <group>
                        <group string="System">
                            <field name="os_id" />
                            <field name="hostname" />
                            <field name="ip_address" />
                            <field name="netmask" />
                            <field name="server_type" />
                            <field name="open_ports" />
                        </group>
                        <group string="Credentials">
                            <field name="username" />
                            <label for="password" />
                            <div>
                                <field name="password"
                                    password="True"
                                    class="oe_inline" />
                                <button name="show_passwd"
                                    string="View Password"
                                    icon="fa-eye"
                                    type="object"
                                    class="oe_link oe_inline" />
                            </div>
                        </group>
                        <group string="Inventory"
                            attrs="{'invisible':[('server_type', 'not in', ['bare_metal', 'bare_metal_sa', 'hypervisor'])]}">
                            <field name="stock_number" />
                            <field name="purchase_date" />
                            <field name="warranty" />
                            <field name="source_doc_number" />
                        </group>
                        <group string="Location">
                            <field name="location_id" />
                            <field name="internal_location"
                                invisible="True" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Hosted Servers"
                            attrs="{'invisible':[u'|', (u'server_type', u'=', u'bare_metal_sa'), (u'hosted_in_id', u'!=', False)]}">
                            <field name="hosted_server_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="category_ids" />
                                    <field name="ip_address" />
                                </tree>
                            </field>
                        </page>
                        <page string="Hardware">
                            <field name="hardware_data" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="server_view_tree"
        model="ir.ui.view">
        <field name="name">it_infra.server.view.tree</field>
        <field name="model">it_infra.server</field>
        <field name="arch"
            type="xml">
            <tree decoration-muted="state=='cancelled'"
                decoration-info="state=='draft'">
                <field name="name" />
                <field name="webadmin"
                    widget="url" />
                <field name="category_ids"
                    widget="many2many_tags" />
                <field name="location_id"
                    widget="many2one_unclickable" />
                <field name="server_type" />
                <field name="os_id"
                    widget="many2one_unclickable" />
                <field name="ip_address" />
                <field name="state"
                    invisible="True" />
            </tree>
        </field>
    </record>

    <!-- WINDOW ACTION  -->
    <record id="server_action_view_form"
        model="ir.actions.act_window">
        <field name="name">Servers</field>
        <field name="res_model">it_infra.server</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id"
            ref="server_view_tree" />
        <field name="search_view_id"
            ref="server_view_search" />
    </record>

</odoo>
