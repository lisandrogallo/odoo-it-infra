<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="view_it_infra_device_filter"
            model="ir.ui.view">
        <field name="name">it_infra.device.select</field>
        <field name="model">it_infra.device</field>
        <field name="arch"
               type="xml">
            <search>
                <group>
                    <field name="name" />
                    <field name="office" />
                    <field name="state" />
                </group>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_it_infra_device_form"
            model="ir.ui.view">
        <field name="name">it_infra.device.form</field>
        <field name="model">it_infra.device</field>
        <field name="arch"
               type="xml">
            <form>
                <header>
                    <button name="action_draft"
                            type="object"
                            string="to Draft"
                            states="active,stored,decommissioned" />
                    <button name="action_active"
                            type="object"
                            string="to Active"
                            states="draft"
                            class="oe_highlight" />
                    <button name="action_stored"
                            type="object"
                            string="to Stored"
                            states="active"
                            class="oe_highlight" />
                    <button name="action_decommissioned"
                            type="object"
                            string="to Decommissioned"
                            states="stored"
                            class="oe_highlight" />
                    <field name="state"
                           widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                    <group>
                        <group>
                            <field name="ip_address" />
                            <field name="stock_number" />
                            <field name="purchase_date" />
                            <field name="warranty" />
                        </group>
                        <group>
                            <field name="device_category_id"
                                   domain="[('parent_id', '!=', False)]" />
                            <field name="office" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Supplies">
                            <field name="supply_ids" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers" />
                    <field name="message_ids"
                           widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_it_infra_device_tree"
            model="ir.ui.view">
        <field name="name">it_infra.device.tree</field>
        <field name="model">it_infra.device</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="ip_address" />
                <field name="device_category_id" invisible="True"/>
                <field name="stock_number" />
                <field name="state" />
                <field name="supply_ids" />
            </tree>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="action_it_infra_assets_printers"
            model="ir.actions.act_window">
        <field name="name">Printers</field>
        <field name="res_model">it_infra.device</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[(u'device_category_id', u'ilike', u'Impresora')]</field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="action_it_infra_assets_scanners"
            model="ir.actions.act_window">
        <field name="name">Scanners</field>
        <field name="res_model">it_infra.device</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[(u'device_category_id', u'ilike', u'Esc\xe1ner')]</field>
    </record>

</odoo>