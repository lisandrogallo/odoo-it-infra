<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM VIEW -->
    <record id="view_infrastructure_network_device_form"
            model="ir.ui.view">
        <field name="name">it_infra.network_device.form</field>
        <field name="model">it_infra.network_device</field>
        <field name="arch"
               type="xml">
            <form>
                <header>
                    <button name="action_draft"
                            type="object"
                            string="to Draft"
                            states="active,stored,decommissioned" />
                    <button name="action_active"
                            type="object"
                            string="to Active"
                            states="draft"
                            class="oe_highlight" />
                    <button name="action_stored"
                            type="object"
                            string="to Stored"
                            states="active"
                            class="oe_highlight" />
                    <button name="action_decommissioned"
                            type="object"
                            string="to Decommissioned"
                            states="stored"
                            class="oe_highlight" />
                    <field name="state"
                           widget="statusbar" />
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </group>
                    <group>
                        <field name="brand_id" />
                        <field name="model" />
                        <field name="description" />
                    </group>
                    <group>
                        <group>
                            <field name="hostname" />
                            <field name="ip_address" />
                            <field name="netmask" />
                        </group>
                        <group string="Credentials">
                            <field name="username" />
                            <label for="password" />
                            <div>
                                <field name="password"
                                       password="True"
                                       class="oe_inline" />
                                <button name="show_passwd"
                                        string="View Password"
                                        icon="fa-eye"
                                        type="object"
                                        class="oe_link oe_inline" />
                            </div>
                        </group>
                        <group string="Inventory">
                            <field name="stock_number" />
                            <field name="purchase_date" />
                            <field name="warranty" />
                            <field name="source_doc_number" />
                        </group>
                        <group string="Location">
                            <field name="location_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Ports">
                            <field name="network_device_port_ids" />
                        </page>
                        <page string="Notes">
                            <br/>
                            <field name="notes" />
                        </page>                        
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers" />
                    <field name="message_ids"
                           widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_infrastructure_network_device_tree"
            model="ir.ui.view">
        <field name="name">it_infra.network_device.tree</field>
        <field name="model">it_infra.network_device</field>
        <field name="arch"
               type="xml">
            <tree decoration-bf="message_unread==True"
                  decoration-muted="state=='cancelled'"
                  decoration-info="state=='draft'">
                <field name="name" />
                <field name="brand_id" />
                <field name="model" />
                <field name="location_id"
                       widget="many2one_unclickable" />
                <field name="ip_address" />
                <field name="state"
                       invisible="True" />
                <field name="message_unread"
                       invisible="True" />
            </tree>
        </field>
    </record>

    <!-- WINDOW ACTION  -->
    <record id="action_it_infra_network_device_routers"
            model="ir.actions.act_window">
        <field name="name">Routers</field>
        <field name="res_model">it_infra.network_device</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[(u'network_device_type', u'ilike', u'router')]</field>
        <field name="context">{'default_network_device_type': 'router'}</field>        
    </record>

    <!-- WINDOW ACTION  -->
    <record id="action_it_infra_network_device_switches"
            model="ir.actions.act_window">
        <field name="name">Switches</field>
        <field name="res_model">it_infra.network_device</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[(u'network_device_type', u'ilike', u'switch')]</field>
        <field name="context">{'default_network_device_type': 'switch'}</field>        
    </record>

    <!-- WINDOW ACTION  -->
    <record id="action_it_infra_network_device_access_points"
            model="ir.actions.act_window">
        <field name="name">Access Points</field>
        <field name="res_model">it_infra.network_device</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[(u'network_device_type', u'ilike', u'ap')]</field>
        <field name="context">{'default_network_device_type': 'ap'}</field>        
    </record>

</odoo>