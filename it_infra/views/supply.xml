<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="view_it_infra_supply_filter"
            model="ir.ui.view">
        <field name="name">it_infra.supply.select</field>
        <field name="model">it_infra.supply</field>
        <field name="arch"
               type="xml">
            <search>
                <group>
                    <field name="name" />
                    <field name="description" />
                </group>
            </search>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_it_infra_supply_form"
            model="ir.ui.view">
        <field name="name">it_infra.supply.form</field>
        <field name="model">it_infra.supply</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="is_pendrive" invisible="True" />
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                    <group>
                        <group attrs="{'invisible':[('is_pendrive', '=', True)]}">
                                <field name="supply_category_id"
                                    domain="[('parent_id', '!=', False)]" />
                                <field name="quantity" />
                                <field name="partner_id"/>     
                        </group>             
                        <group attrs="{'invisible':[('is_pendrive', '=', False)]}">
                            <field name="user_id" />
                            <field name="loan_date"
                                   attrs="{'required':[('is_pendrive', '=', True), ('user_id', '!=', False)]}" />
                        </group>
                    </group>
                    <notebook attrs="{'invisible':[('is_pendrive', '=', True)]}">
                        <page string="Devices" >
                            <field name="device_ids" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers" />
                    <field name="message_ids"
                           widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_it_infra_supply_tree"
            model="ir.ui.view">
        <field name="name">it_infra.supply.tree</field>
        <field name="model">it_infra.supply</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="supply_category_id" />
                <field name="quantity" />
            </tree>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_it_infra_supply_pendrive_tree"
            model="ir.ui.view">
        <field name="name">it_infra.supply.pendrive.tree</field>
        <field name="model">it_infra.supply</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="user_id" />
            </tree>
        </field>
    </record>    

    <!-- WINDOW ACTION -->
    <record id="action_it_infra_supply_supplies"
            model="ir.actions.act_window">
        <field name="name">Supplies</field>
        <field name="res_model">it_infra.supply</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_pendrive', '=', False)]</field>
        <field name="view_ids" eval="[(5, 0, 0),(0, 0, {'view_mode': 'tree', 'view_id': ref('it_infra.view_it_infra_supply_tree')}),(0, 0, {'view_mode': 'form', 'view_id': ref('it_infra.view_it_infra_supply_form')})]"/>        
    </record>

    <!-- WINDOW ACTION -->
    <record id="action_it_infra_supply_pendrives"
            model="ir.actions.act_window">
        <field name="name">Pendrives</field>
        <field name="res_model">it_infra.supply</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_pendrive', '=', True)]</field>
        <field name="context">{'default_is_pendrive': True }</field>
        <field name="view_ids" eval="[(5, 0, 0),(0, 0, {'view_mode': 'tree', 'view_id': ref('it_infra.view_it_infra_supply_pendrive_tree')}),(0, 0, {'view_mode': 'form', 'view_id': ref('it_infra.view_it_infra_supply_form')})]"/>
    </record>    


</odoo>