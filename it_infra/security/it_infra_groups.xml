<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_user"
        model="res.groups">
        <field name="name">User</field>
        <field name="users"
            eval="[(4, ref('base.user_root'))]" />
    </record>

    <record id="group_manager"
        model="res.groups">
        <field name="name">Manager</field>
        <field name="users"
            eval="[(4, ref('base.user_root'))]" />
        <field name="implied_ids"
            eval="[(4,ref('group_user'))]" />
    </record>

</odoo>
